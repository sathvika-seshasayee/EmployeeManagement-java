<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
  
<hibernate-mapping>
  <class name = "com.ideas2it.employeemanagement.employee.model.Address" table = "address">   
 
        <id name = "id" type = "int" column = "id">
            <generator class="increment"/>
        </id>
      <property name = "doorNoAndStreet" column = "door_no_and_street" type = "string"/>
      <property name = "city" column = "city" type = "string"/>
      <property name = "state" column = "state" type = "string"/>
      <property name = "country" column = "country" type = "string"/>
      <property name = "pincode" column = "pincode" type = "string"/>
      <property name = "isPermanantAddress" column = "is_permanant_address" type = "boolean"/>
      <property name = "isDeleted" column = "is_deleted" type = "boolean"/>

      </class>
</hibernate-mapping>